{
    "name": "integration-server-ui",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "lint": "eslint src --ext .tsx,.ts",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:quick": "vitest --run",
        "test:coverage": "vitest --run --coverage",
        "test:a11y": "vitest --run --reporter=verbose src/components/__tests__/*.a11y.test.tsx",
        "lighthouse": "lhci autorun",
        "lighthouse:local": "lighthouse http://localhost:5173 --output json --output-path ./lighthouse-report.json --chrome-flags='--headless --no-sandbox'",
        "performance:test": "pnpm run build && pnpm run lighthouse",
        "format": "prettier \"src/**/*.{ts,tsx,js,jsx,json,css,md}\" --write",
        "format:check": "prettier \"src/**/*.{ts,tsx,js,jsx,json,css,md}\" --check",
        "biome:check": "npx @biomejs/biome check src/ --max-diagnostics=200",
        "biome:fix": "npx @biomejs/biome check --write src/ --max-diagnostics=200",
        "tsc:check": "tsc --noEmit",
        "test:all": "pnpm run test:coverage && pnpm run test:a11y",
        "test:all:coverage": "pnpm run test:coverage && pnpm run test:a11y",
        "pre-commit": "pnpm run tsc:check && pnpm run biome:check && pnpm run format:check && pnpm run test:all",
        "quality:check": "pnpm run pre-commit && pnpm run lighthouse"
    },
    "dependencies": {
        "@mui/icons-material": "^5.15.17",
        "@mui/material": "^5.15.17",
        "@tanstack/react-query": "^5.0.0",
        "@testing-library/react": "^14.3.1",
        "axios": "^1.6.2",
        "date-fns": "^4.1.0",
        "jest-axe": "^8.0.0",
        "msw": "^2.2.2",
        "notistack": "^3.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.17.0",
        "uuid": "^9.0.0",
        "zod": "^3.23.0"
    },
    "devDependencies": {
        "@emotion/cache": "^11.14.0",
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.1",
        "@lhci/cli": "^0.12.0",
        "@testing-library/jest-dom": "^6.8.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/jest-axe": "^3.5.9",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@types/uuid": "^9.0.6",
        "@typescript-eslint/eslint-plugin": "^8.39.0",
        "@vitejs/plugin-react": "^4.2.0",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "axe-core": "^4.8.0",
        "eslint": "^8.53.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-sonarjs": "^0.21.0",
        "eslint-plugin-unicorn": "^48.0.1",
        "jsdom": "^22.1.0",
        "lighthouse": "^11.4.0",
        "prettier": "^3.1.0",
        "typescript": "^5.2.2",
        "vite": "^7.1.1",
        "vitest": "^3.2.4"
    }
}