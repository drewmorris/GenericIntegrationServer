# Application
JWT_SECRET=changeme
JWT_ALGORITHM=HS256
ACCESS_TTL_MINUTES=15
REFRESH_TTL_DAYS=30
AUTH_BACKEND=db

# Postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=integration_server

# Redis (for Celery broker/backend, OAuth state, optional locks)
REDIS_URL=redis://localhost:6379/0

# Celery (defaults to REDIS_URL if unset)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security – encryption for stored credentials
CREDENTIALS_SECRET_KEY=REPLACE_WITH_BASE64_FERNET_KEY

# OAuth hardening (CSV of allowed hosts for next/redirect_uri)
OAUTH_ALLOWED_REDIRECT_HOSTS=localhost:5173,localhost:8000

# Destinations
CLEVERBRAG_BASE_URL=https://api.cleverbrag.cleverthis.com

# Web (dev) – Vite will use backend on localhost:8000 if not overridden
VITE_API_BASE= 